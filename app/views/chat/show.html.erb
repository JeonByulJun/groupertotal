<style>
  .sidetab{
    left: 0;
    float: left;
    width: 75px;
    height: 100%;
    position: absolute;
    z-index: 1;
    top: 52px;
    background-color: #52D5CC;
    overflow-x: hidden;
    border: 1px solid #4CCFC5;
  }
  .sidebar{
	    height: 100%;
	    width: 35%;
	    max-width: 440px;
	    position: absolute;
	    z-index: 1;
	    top: 52px;
	    left: 75px;
	    background-color: #52D5CC;
	    overflow-x: hidden;
	    border: 1px solid #4CCFC5;
	}
	.homebody{
		width: 55%;
		float: right;
	}
	#chat-icon-box{
	  position: absolute;
	  top: 50%;
	  margin-top: -90px;
	  left: 50%;
	  margin-left: -20px;
	}
	#chat-icon-member{
	  width: 40px;
	  height: 40px;
		font-size: 30px;
	  color: white;
	}
	#chat-icon-chatlist{
	  width: 40px;
	  height: 40px;
		font-size: 30px;
	  color: white;
	}
	#chat_top {
	  background-color: white;
    border-bottom: 1px solid #ccc;
    padding-top: 10px;
    padding-bottom: 10px;
    padding-left: 25px;
